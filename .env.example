# EventFlow Analytics Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
# The backend API endpoint for EventFlow data
# In production, this would point to your Azure Functions or API
REACT_APP_API_ENDPOINT=https://api.eventflow.example

# Azure Application Insights
# Used for monitoring performance and tracking errors in production
# Get this from Azure Portal > Application Insights > Instrumentation Key
REACT_APP_INSIGHTS_KEY=your-application-insights-key-here

# Feature Flags
# Control which features are enabled in the application
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_PERFORMANCE_MONITOR=true

# Analytics Configuration
# Control data refresh rates and limits
REACT_APP_REFRESH_INTERVAL=5000
REACT_APP_MAX_SESSIONS=100
REACT_APP_MAX_DATA_POINTS=500

# Development Settings
# These are only used in development mode
REACT_APP_USE_MOCK_DATA=true
REACT_APP_SIMULATE_SLOW_NETWORK=false
REACT_APP_DEBUG_PERFORMANCE=false

# Version Information
# Automatically set by CI/CD pipeline
REACT_APP_VERSION=$npm_package_version
REACT_APP_BUILD_TIME=development
